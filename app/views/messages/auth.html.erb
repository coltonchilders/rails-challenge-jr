<link 
  href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.css" 
  rel="stylesheet"  type='text/css'>
<link href="https://fonts.googleapis.com/css?family=Megrim|Raleway" rel="stylesheet">

<div class="header">
  <div class="container">
      <a href="/home">
        <i class="fa fa-user-secret fa-3x" aria-hidden="true"></i><span style="font-family: 'Megrim'; color:white; font-size: 48pt;"> ephemeral</span>
      </a>
  </div>
</div>

<div class="auth">
  <div class="container-fluid">
      <div class="password">
        <%= form_for (@message) do |f| %>
          <div class="field">
            <%= f.label :password %> 
            <%= f.password_field :pw %>
              <% if flash[:alert] %>
                <div class="alert" style="color:red;"><%= flash[:alert] %></div>
            <% end %>
          </div>
          <div class="actions view-btn"> 
    		<%= f.submit "View Message" %> 
          </div> 
		<% end %>
      </div>
  </div>
</div>
